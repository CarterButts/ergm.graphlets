  journal      = "Journal of Statistical Software",
  year         = "2015",
  volume       = "65",
  number       = "12",
  pages        = "1--29",
  url          = "http://www.jstatsoft.org/v65/i12/",

  textVersion  =
  paste("Omer Nebil Yaveroglu, Sean M. Fitzhugh, Maciej Kurant, Athina Markopoulou, Carter T. Butts, Natasa Przulj (2015).",
        "ergm.graphlets: A Package for ERG Modeling Based on Graphlet Statistics.",
        "Journal of Statistical Software, 65(12), 1-29.",
